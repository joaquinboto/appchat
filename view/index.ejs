<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="./style.css">
    <title>Document</title>
    
</head>
<body>
    
    <div class="containerProductos">
        <h1>Ingrese productos</h1>
        <form id="formulario" class="form-group" action="/productos" method="post">
            <div>
                <label class="form-label" for="nombre">Ingrese nombre: </label>
                <input class="input-group" id="name"  type="text" name="nombre">
            </div>
            <div>
                <label class="form-label" for="cantidad">Ingrese cantidad: </label>
                <input class="input-group" type="text" name="cantidad">
            </div>
            <div>
                <label class="form-label" for="imagen">Cargar imagen</label>
                <input class="input-group" type="text" name="imagen">
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
        </form>
    </div>

   


    <div class="divProductosCargados">
        <h1>Historial</h1>
        <table class="table table-dark table-striped">
            <thead>
                <th scope="col">Imagen</th>
                <th scope="col">Nombre</th>
                <th scope="col">Cantidad</th>
            </thead>
            <tbody id="productos">
        
            </tbody>
        </table>
    </div>

   
    <div class="card col-md-4 mx-auto mt-5 nick-wrap" >
        <div class="card-header">
            <h4>Introduce tu usuario</h4>
        </div>
        <p id="nick-error">
        <!--ACA VA UN ERROR-->
        </p>
        <div class="card-body">
            <form id="nick-form">
                <input type="text" id="nick-name" class="form-control">
                <button type="submit" class="btn btn-success mt-3" id="nick-btn"> Acceder</button>
            </form>

        </div>

    </div>

    <!-- Formulario de mensajes -->

    <div class="container " id="content-wrap">
        
        <div class="row">
            <div class="col-md-7 offset-md-1 mt-5">
                <div class="card">
                    <div class="card-header">
                        <h4>Chat</h4>
                    </div>
                    <div id="chat" class="card-body">
                    <!--ACA VAN LOS CHATS-->
                    </div>
                    <form id="messages-form" class="card-footer">
                        <div class="input-group">
                            <input class="form-control" type="text" name="text" id="message">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-success"><i class="fas fa-paper-plane"></i> Enviar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Lista de usuarios conectados -->

            <div class="col-md-3 mt-5">
                <div class="card">
                    <div class="card-header">
                        <h4>Usuarios conectados</h4>
                    </div>
    
                    <div class="card-body"> 
                        <div id="usernames">
    
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>


    
   

    <script src="/socket.io/socket.io.js"></script>
    <script src="./main.js"></script> 
    
  
</body>
</html>